<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/r_bg_sub"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/r_bg_sub"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/community_note_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/r_bg_main"
            android:divider="?attr/r_hariline"
            android:dividerHeight="1px"
            android:listSelector="?attr/r_bg_sub" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/r_bg_main"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?attr/r_hariline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/edit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="?attr/r_text_main"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="?attr/r_text_main"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/common_dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/jd_custom_dialog_fillet"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/common_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="发布成功"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_dialog_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="是否同步分享到"
                android:textColor="@color/text_sub"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/common_dialog_operation_btn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#BFBFBF" />

            <LinearLayout
                  android:id="@+id/common_dialog_button1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal" >

                <TextView
                  
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="新浪微博"
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#BFBFBF" />

            <LinearLayout
                 android:id="@+id/common_dialog_button2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal" >

                <TextView
                   
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="微信好友"
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#BFBFBF" />

            <LinearLayout
                 android:id="@+id/common_dialog_button3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="微信朋友圈"
                    android:textColor="@color/text_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#BFBFBF" />

            <LinearLayout
                 android:id="@+id/common_dialog_button4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/red_main"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp" >

        <LinearLayout
            android:id="@+id/parent_chapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/parent_chapter_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Outline"
                android:textColor="?attr/r_text_main"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/parent_chapter_position"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="Page"
                android:textColor="?attr/r_text_sub"
                android:textSize="16dp" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/r_hariline" />

</LinearLayout>
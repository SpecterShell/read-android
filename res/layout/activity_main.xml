<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff" >
    
    <TextView
        android:id="@+id/mainVersionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_placeholder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/splashFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView 
            android:id="@+id/channel_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/channel_logo_360"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text=""
            android:visibility="gone"/>
        
        <ImageView
            android:id="@+id/splashImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty_string"
            android:scaleType="centerCrop"
            android:visibility="visible" />
        
       <TextView 
            android:id="@+id/channel_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/channel_logo_360"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text=""
            android:visibility="gone"/>

        <Button android:id="@+id/jump_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/jump_bt_rectangle"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="跳过"/>
    </FrameLayout>
    
    <ImageView
        android:id="@+id/start_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/start_app"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#7F000000"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/toLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:minWidth="100dp"
                android:text="@string/login"
                android:textColor="#FF777777" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/toRegisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:minWidth="100dp"
                android:text="@string/register"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sloganTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:text="@string/you_are_what_you_read"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:visibility="gone" />

</RelativeLayout>
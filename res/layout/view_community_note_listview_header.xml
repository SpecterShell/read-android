<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/r_bg_sub"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="?attr/r_bg_sub"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/r_hariline"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <LinearLayout
        android:id="@+id/show_all_notes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/read_pressed_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show_others_notes"
            android:textColor="?attr/r_text_main"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/switch_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/read_switch_off_line_img" />

            <ImageView
                android:id="@+id/switchOn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="?attr/read_switch_on_dot_img" />

            <ImageView
                android:id="@+id/switchOff_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="?attr/read_switch_off_dot_img" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/r_hariline"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <LinearLayout
        android:id="@+id/import_notes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/read_pressed_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/import_others_notes"
            android:textColor="?attr/r_text_main"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="?attr/read_icon_arrow_right_img" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/r_hariline"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/import_text"
            android:textColor="?attr/r_text_sub"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imported_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/imported_text"
            android:textColor="?attr/r_text_sub"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
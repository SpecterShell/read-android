<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/timeline_padding" >

    <TextView
        android:id="@+id/text_number"
        style="@style/wrap_height_wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/time_placehold"
        android:textSize="@dimen/user_follow_number" />

    <ImageView
        android:id="@+id/bookList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/timeline_padding"
        android:adjustViewBounds="true"
        android:contentDescription="@string/bookList"
        android:maxWidth="@dimen/modify_user_thumbnail"
        android:scaleType="fitStart" />

    <EditText
        android:id="@+id/shareText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="@dimen/post_tweet_edit_text_below"
        android:layout_toRightOf="@id/bookList"
        android:background="@drawable/grey_rect"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="@integer/timeline_comment_minline"
        android:padding="@dimen/quote_padding"
        android:scrollbars="vertical"
        android:singleLine="false" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/read_pressed_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表项"
            android:textColor="?attr/r_text_main"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/labelImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="文件大小"
            android:textColor="?attr/r_text_sub"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/read_round_corner_bg"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/download"
                android:textColor="?attr/r_theme"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fontEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/read_item_enabled_img"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/itemSubLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/r_hariline" />

</LinearLayout>
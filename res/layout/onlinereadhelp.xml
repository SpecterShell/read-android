<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wSize32"
            android:background="@color/bg_sub"
            android:orientation="vertical" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/hariline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:text="@string/what_readingcard"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_readingcard_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wSize14"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:text="@string/use_readingcard"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_readingcard_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:text="@string/buy_readcard"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buy_readingcard_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wSize14"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize50"
                android:text="@string/deferent_readcard"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deferent_readcard_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wSize14"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize50"
                android:text="@string/readcard_books"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/readcard_books_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wSize14"
            android:layout_marginTop="@dimen/wSize14"
            android:orientation="vertical"
            android:paddingLeft="@dimen/wSize16"
            android:paddingRight="@dimen/wSize16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:text="@string/readcard_invoice"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/readcard_invoice_content"
                android:textColor="@color/text_main"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/hariline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wSize32"
            android:background="@color/bg_sub"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>
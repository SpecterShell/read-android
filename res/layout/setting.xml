<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_sub"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_top"
                android:background="@color/bg_sub" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/modify_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/user_modify"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/user_device_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/out_bind"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/save_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:id="@+id/book_save_mkdir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/book_save_mkdir"
                    android:textColor="@drawable/save_dir_selector"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_top"
                android:background="@color/bg_sub"
                android:orientation="horizontal" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/messagepush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/message_push"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <RelativeLayout
                    android:id="@+id/switch_dot_statue"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/switch_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_switchoff_line" />

                    <ImageView
                        android:id="@+id/switchOff_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/btn_switchoff_dot" />

                    <ImageView
                        android:id="@+id/switchOn_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/btn_switchon_dot" />
                </RelativeLayout>
            </RelativeLayout>
            
            
            <View
                android:id="@+id/borrowLine"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/borrowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:id="@+id/borrowtext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="用户借阅"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />
                
                <TextView
                    android:layout_toRightOf="@+id/borrowtext"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="互相借阅书籍"
                    android:textColor="@color/text_sub"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/borrow_switch_dot_statue"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/borrow_switch_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_switchoff_line" />

                    <ImageView
                        android:id="@+id/borrow_switchOff_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/btn_switchoff_dot" />

                    <ImageView
                        android:id="@+id/borrow_switchOn_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/btn_switchon_dot" />
                </RelativeLayout>
            </RelativeLayout>
                        
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_top"
                android:background="@color/bg_sub"
                android:orientation="horizontal" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/clean_cookie_vessel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/clean_cookie"
                    android:textColor="@color/red_main"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/upgrade"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:id="@+id/update_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingBottom="@dimen/padding_left"
                        android:paddingTop="@dimen/padding_left"
                        android:textColor="@color/text_sub"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/icon_arrow_right" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/help"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:background="@color/hariline" />

            <RelativeLayout
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/contact_us"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:background="@color/bg_sub"
                android:orientation="horizontal" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <LinearLayout
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding_left"
                    android:paddingTop="@dimen/padding_left"
                    android:text="@string/switch_accounts"
                    android:textColor="@color/red_main"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/hariline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wSize32"
                android:background="@color/bg_sub"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_sub"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left" >

                <TextView
                    android:id="@+id/version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/jd_settingtext1"
                    android:textColor="@color/text_sub"
                    android:textSize="@dimen/tSize12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_sub"
                android:gravity="center"
                android:paddingBottom="@dimen/wSize32"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left"
                android:paddingTop="@dimen/wSize8" 
                android:orientation="vertical">

                <TextView
                    android:id="@+id/copy_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/jd_settingtext2"
                    android:textColor="@color/text_sub"
                    android:textSize="@dimen/tSize12" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.jingdong.app.reader.view.PartClickableTextView
        android:id="@+id/message"
        style="@style/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <RelativeLayout
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/timeline_bottom_margin"
        android:layout_marginTop="@dimen/timeline_content_margin"
        android:paddingLeft="@dimen/chat_padding_left"
        android:paddingRight="@dimen/chat_padding_right" >

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="@dimen/book_cover_width"
            android:layout_height="@dimen/book_cover_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shadow_black"
            android:contentDescription="@string/empty_string"
            android:maxHeight="100dp"
            android:maxWidth="150dp"
            android:paddingBottom="4dp"
            android:paddingRight="3dp"
            android:paddingTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_default_cover" />

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/bookCover"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF444444"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookName"
            android:layout_alignRight="@+id/bookName"
            android:layout_below="@+id/bookName"
            android:layout_marginTop="12dp"
            android:text="@string/empty_string"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF999999"
            android:textSize="13dp" />
    </RelativeLayout>

</merge>
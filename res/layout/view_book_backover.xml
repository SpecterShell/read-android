<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/read_backover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/r_bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/backoverLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/read_backover_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96dp"
            android:text="@string/read_finish"
            android:textColor="@color/r_text_sub"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/readTimeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backcover_time_standard" />

                <TextView
                    android:id="@+id/readTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="--小时"
                    android:textColor="@color/r_text_sub"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/readNoteImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backcover_note_standard" />

                <TextView
                    android:id="@+id/readNoteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/hour"
                    android:textColor="@color/r_text_sub"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingPlease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ratingPleaseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/rating_please"
                android:textColor="@color/r_theme"
                android:textSize="14dp" />

            <RatingBar
                android:id="@+id/book_rating_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:minHeight="27dp"
                android:numStars="5"
                android:progressDrawable="@drawable/read_rating_star_standard"
                android:stepSize="1"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/book_rating_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:minHeight="27dp"
                android:numStars="5"
                android:progressDrawable="@drawable/read_rating_star_soft"
                android:stepSize="1"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/book_rating_mint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:minHeight="27dp"
                android:numStars="5"
                android:progressDrawable="@drawable/read_rating_star_mint"
                android:stepSize="1"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/book_rating_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:minHeight="27dp"
                android:numStars="5"
                android:progressDrawable="@drawable/read_rating_star_night"
                android:stepSize="1"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/bookShareImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="@drawable/backcover_share_standard"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bookShareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/rating_please"
            android:textColor="@color/r_text_main"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/purchaseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="234dp"
            android:text="@string/purchase_full_book_indicator"
            android:textColor="@color/r_text_sub"
            android:textSize="14dp" />

        <Button
            android:id="@+id/purchaseFullbook"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/green_button"
            android:text="@string/purchase_full_book"
            android:textColor="@color/r_bg_main"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="53dp"
            android:background="@color/timeline_divider_color" />

        <RelativeLayout
            android:id="@+id/sina_weibo"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/setting_item_selected_bg" >

            <TextView
                style="@style/user_detail_text"
                android:layout_marginLeft="@dimen/setting_padding_left"
                android:drawableLeft="@drawable/icon_sina_weibo"
                android:drawablePadding="10dp"
                android:text="@string/sina_weibo" />

            <CheckBox
                android:id="@+id/sinaSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/setting_padding_right"
                android:button="@drawable/setting_checkbox" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/timeline_divider_color" />
    </LinearLayout>


</RelativeLayout>
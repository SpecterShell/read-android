<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/bg_sub" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="210dp"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="20dp"
        	android:layout_marginBottom="30dp"
        	android:padding="20dp"
        	android:layout_gravity="center"
        	android:gravity="center"
        	android:background="@color/white"
        	android:orientation="vertical">
            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/comment_default_book" />
            <TextView android:id="@+id/book_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="@dimen/tSize14"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:text="书名"/>
            <TextView  android:id="@+id/author"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tSize12"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/text_sub"
                android:text="作者"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/book_detail_sendbook_order_logo"
            android:scaleType="fitXY" />
    </FrameLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/sendbook_order_present_ready"
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sendbook_order_present_sendtip"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/tSize12" />
    
    <ImageView
        android:id="@+id/goto_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        android:src="@drawable/book_detail_sendbook_topay_btn" />

    <TextView android:id="@+id/goto_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sendbook_order_present_rule"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/tSize12" />
</LinearLayout>
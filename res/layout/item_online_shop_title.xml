<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/loacl_bookshelf_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/hSize48"
        android:paddingBottom="@dimen/hSize3"
        android:background="@drawable/bg_local_shelf_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wSize10"
            android:layout_weight="1.0"
            android:duplicateParentState="true"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/onlineShop"
            android:textColor="@color/font_online_title"
            android:textSize="@dimen/tSize18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wSize20"
                android:layout_marginTop="@dimen/hSize3"
                android:layout_gravity="center_vertical"
                layout="@layout/item_shoppingcart"
                android:visibility="gone" />
            
            <LinearLayout
                android:id="@+id/goto_myjd"
                android:layout_width="@dimen/wSize35"
                android:layout_height="@dimen/hSize35"
            	android:layout_gravity="center"
            	android:gravity="center"
            	android:layout_marginRight="@dimen/wSize20"
            	android:layout_marginLeft="@dimen/wSize20"
            	android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hSize3"
                android:background="@drawable/icon_goto_myjd"
                android:contentDescription="@string/myjd"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Button_titleRight"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hSize35"
            	android:layout_gravity="center"
            	android:gravity="center"
            	android:background="@drawable/bg_title_button"
            	android:layout_marginRight="@dimen/wSize3"
            	android:paddingLeft="@dimen/wSize7"
            	android:paddingRight="@dimen/wSize7"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/titleTextRight"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wSize3"
            		android:layout_marginRight="@dimen/wSize3"
                    android:text="@string/bookShelf"
                    android:textColor="@color/text_color_504c46_turn_green"
            		android:textSize="@dimen/tSize18" />
            </LinearLayout>

        </LinearLayout>
            <Button
                android:id="@+id/edit"
                style="@style/button_myjd_download"
                android:layout_marginRight="@dimen/wSize8"
                android:layout_marginLeft="@dimen/wSize8"
                android:visibility="gone"/>
    </LinearLayout>

</merge>
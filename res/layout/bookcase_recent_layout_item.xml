<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/wSize16"
    android:paddingBottom="@dimen/wSize16"
    android:background="@color/bg_color_car_pinkred" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/wSize16" >

        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="102dp"
            android:layout_height="136dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_default_cover" />

        <ImageView
            android:id="@+id/imageViewLabel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty_string"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/wSize16"
        android:orientation="vertical"
        android:paddingLeft="@dimen/wSize16" >

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/wSize4"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textSize="@dimen/tSize16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/wSize16"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textSize="@dimen/tSize12" />

        <TextView
            android:id="@+id/book_progress_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/wSize4"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textSize="@dimen/tSize12" />

        <TextView
            android:id="@+id/read_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textSize="@dimen/tSize12" />
    </LinearLayout>

</LinearLayout>
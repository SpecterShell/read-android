<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_top_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/header_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 头像 -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" >

                <com.jingdong.app.reader.view.RoundNetworkImageView
                    android:id="@+id/integration_thumb_nail"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/me" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/avatar_round_stroke_bold" />

                <ImageView
                    android:id="@+id/avatar_label"
                    android:layout_width="@dimen/avatar_homepage_vip_size"
                    android:layout_height="@dimen/avatar_homepage_vip_size"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/me"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:id="@+id/integration_current_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="当前积分：576"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/next_gift_time_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="距下一个礼物还有5天"
                android:textColor="@color/divider"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/integration_record_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/integration_icon_points_records"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="@string/integration_record" />

        <View
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:background="@color/hariline" />

        <TextView
            android:id="@+id/exchange_description_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/integration_icon_points_rules"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="@string/exchange_description" />

        <View
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:background="@color/hariline" />

        <TextView
            android:id="@+id/sign_to_get_scrore_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/integration_icon_points_money"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="签到领积分" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/hariline"/>

</LinearLayout>